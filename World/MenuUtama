import greenfoot.*;

public class MenuUtama extends World {

    public MenuUtama() {
        super(1024, 576, 1); // Ukuran bisa disesuaikan
        
        // Gunakan salah satu background desa Anda yang paling bagus untuk menu
        GreenfootImage background = new GreenfootImage("Village.jpg");
        background.scale(getWidth(), getHeight());
        setBackground(background);
        
        // Tambahkan Judul Game
        showText("Petualangan Elara", getWidth() / 2, 150);
        
        // Tambahkan Tombol Mulai
        addObject(new Tombol("mulai", "tombol_mulai.png"), getWidth() / 2, 300);
        
        // Tambahkan Tombol Keluar
        // addObject(new Tombol("keluar", "tombol_keluar.png"), getWidth() / 2, 400);
    }
}
