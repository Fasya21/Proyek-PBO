import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class Platform here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Platform extends Actor
{
    /**
     * Act - do whatever the Platform wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public Platform (int lebar, int tinggi){
        GreenfootImage image = new GreenfootImage(lebar, tinggi);
        image.setColor(new Color(255, 0, 0, 100)); // Memberi warna merah transparan
        image.fill(); // Mengisi kotak dengan warna tersebut
        setImage(image);
    }
    public void act()
    {
        // Add your action code here.
    }
}
